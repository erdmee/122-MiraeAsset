# 기존 설정들
OPENAI_API_KEY=your_openai_api_key_here
DART_API_KEY=your_dart_api_key_here
OPENAI_MODEL=gpt-4o-mini

# HyperCLOVA X API 설정 (미래에셋 공모전용)
NAVER_CLOVA_API_KEY=your_naver_clova_api_key_here
NAVER_CLOVA_API_SECRET=your_naver_clova_api_secret_here
NAVER_CLOVA_API_HOST=clovastudio.stream.ntruss.com
NAVER_CLOVA_MODEL=HyperCLOVA-X
USE_HYPERCLOVA=true

# 기타 설정들
environment=development
log_level=INFO
api_host=0.0.0.0
api_port=8000
max_news_count=20
max_disclosures_count=10
cache_duration_minutes=30
request_timeout=10
request_delay=1.0

# 데이터베이스 및 캐시
DB_PATH=data/financial_data.db
CACHE_DIR=data/cache
DEBUG=true
